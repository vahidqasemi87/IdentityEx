@model IEnumerable<UserApp>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>نام کاربری</th>
            <th>ایمیل</th>
            <th>کد ملی</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.SNN</td>
                    <td>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.Id">حذف</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="EditUserRoles" asp-route-id="@user.Id">ویرایش نقش</a>    
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">داده ای وجود ندارد</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-secondary">ایجاد کاربر</a>
<a asp-action="Index" asp-controller="Roles" class="btn btn-primary">نقش ها</a>